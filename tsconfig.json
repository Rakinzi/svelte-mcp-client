{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "types": ["vitest/globals"],
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "examples"]
}
